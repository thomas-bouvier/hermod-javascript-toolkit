{
  "name": "snips-toolkit",
  "version": "1.0.0",
  "description": "Toolkit for writing Snips actions.",
  "main": "dist/lib.js",
  "module": "esm/lib.js",
  "types": "dist/lib.d.ts",
  "bin": {
    "snips-toolkit": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snipsco/snips-javascript-toolkit"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "esm",
    "config",
    "jest.config.js"
  ],
  "scripts": {
    "start": "npm run lint && npm run build",
    "build": "npm run clean && tsc && tsc -p tsconfig.commonjs.json && chmod -R u+x dist && chmod -R u+x esm",
    "dev": "tsc -w",
    "lint": "eslint \"**/*.js\" \"**/*.ts\"",
    "clean": "rimraf dist && rimraf esm"
  },
  "author": "Julien Elbaz",
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.2",
    "@types/ini": "^1.3.30",
    "@types/node": "^11.12.0",
    "@types/yargs": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "eslint": "^5.15.3",
    "eslint-plugin-jest": "^22.4.1",
    "istanbul-lib-coverage": "^2.0.5",
    "typescript": "^3.3.4000",
    "yargs": "^13.2.4"
  },
  "dependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@types/fetch-mock": "^7.2.3",
    "@types/jest": "^24.0.11",
    "babel-loader": "^8.0.4",
    "camelcase": "^5.2.0",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^2.0.1",
    "commander": "^2.19.0",
    "debug": "^4.1.1",
    "fetch-mock": "^7.3.1",
    "hermes-javascript": "^0.3.11",
    "i18next": "^15.0.8",
    "ini": "^1.3.5",
    "jest": "^24.5.0",
    "jest-haste-map": "^24.5.0",
    "mqtt": "^2.18.8",
    "node-fetch": "^2.3.0",
    "nodemon-webpack-plugin": "^4.0.8",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2",
    "vm2": "^3.6.10",
    "webpack": "^4.29.6",
    "wretch": "^1.5.1"
  }
}
